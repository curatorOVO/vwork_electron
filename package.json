{
  "name": "vwork-electron",
  "version": "1.1.0",
  "description": "北极熊企微框架Pro",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "convert-icon": "node scripts/convert-icon.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run convert-icon && npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "electron:build:dir": "npm run convert-icon && npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "vue3",
    "vwork"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.5",
    "cors": "^2.8.5",
    "element-plus": "^2.5.6",
    "express": "^4.22.1",
    "pinia": "^2.1.7",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  },
  "optionalDependencies": {
    "ini": "^4.1.2"
  },
  "build": {
    "appId": "com.vwork.framework",
    "productName": "北极熊企微框架Pro",
    "icon": "build/icon.ico",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "nsis": {
      "oneClick": false,
      "language": "2052",
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "conf",
        "to": "conf",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "signAndEditExecutable": true,
      "sign": null,
      "signingHashAlgorithms": []
    }
  }
}
